    <section id="main-content">
        <section class="wrapper main-wrapper">

            <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
                <div class="page-title">

                    <div class="pull-left">
                        <h1 class="title" style="font-family: Pacifico;color: 	#fffffe;"><span style="color: #26b75e;">Dash</span>board</h1>
                    </div>

                    <div class="pull-right hidden-xs">
                        <ol class="breadcrumb">
                            <li>
                                <a asp-action="Index" asp-controller="Admin" style="font-family: 'Almendra', serif;color: 	#fffffe;"><i class="fa fa-home"></i>Dashboard</a>
                            </li>

                            <li class="active">
                                <strong style=" font-family: 'Almendra', serif;color: 	#fffffe;">Home</strong>
                            </li>
                        </ol>
                    </div>

                </div>
            </div>

            <div class="clearfix"></div>

            <div class="col-lg-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Dashboard</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle fa fa-chevron-down"></i>
                            <i class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></i>
                            <i class="box_close fa fa-times"></i>
                        </div>
                    </header>
                    <div class="content-body">

                        <div class="col-12">
                            <div class="row">
                                <div class="col-12" style="border-bottom:0.5px dotted #aaa; margin-bottom:2vh;">
                                    <h1 class="title text-center" style="font-family: Pacifico; color: #333;">
                                        <span style="color: #26b75e;">College's</span> Administrative Dashboard Statistics

                                    </h1>
                                </div>
                                 @if (Model.students != null)
                                {
                                    int Totalstudents = Model.students.Count(); // Get the total number of donations

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="tile-counter bg-secondary" style="font-family: Pacifico;">
                                            <div class="content">
                                               <i class="fa-brands fa-google-scholar"></i>
                                                <h2 style="font-family: Pacifico;" class="number_counter" data-speed="3000" data-from="1" data-to="@Totalstudents">@Totalstudents</h2>
                                                <div class="clearfix"></div>
                                                <span style="font-family: Pacifico;">Total Students Registered</span>
                                            </div>
                                        </div>
                                    </div>
                                }

                                @if (Model.courses != null)
                                {
                                    decimal Totalcourse = Model.courses.Count(); // Get the total donation amount

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="tile-counter bg-orange" style="font-family: Pacifico;">
                                            <div class="content">
                                                <i class="fa-solid fa-graduation-cap"></i>
                                                <h2 style="font-family: Pacifico;" class="number_counter" data-speed="3000" data-from="1" data-to="@Totalcourse">@Totalcourse</h2>
                                                <div class="clearfix"></div>
                                                <span style="font-family: Pacifico;">Total Courses</span>
                                            </div>
                                        </div>
                                    </div>

                                } 

                            </div>
                            <div class="row" style="padding:1%;">
 
                                @if (Model.departments != null)
                                {
                                    int totalDepart = Model.departments.Count(); // Get the total number of departments

                                    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                                        <div class="tile-counter bg-primary" style="font-family: Pacifico;">
                                            <div class="content">
                                                <i class="fa-solid fa-building-user"></i>
                                                <h2 style="font-family: Pacifico;" class="number_counter" data-speed="3000" data-from="1" data-to="@totalDepart">@totalDepart</h2>
                                                <div class="clearfix"></div>
                                                <span style="font-family: Pacifico;">Total Departments</span>
                                            </div>
                                        </div>
                                    </div>
                                }

                                @if (Model.faculties != null)
                                {
                                    int totalfaculties = Model.faculties.Count(); // Get the total number of departments

                                    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                                        <div class="tile-counter bg-info" style="font-family: Pacifico;">
                                            <div class="content">
                                                <i class="fa-solid fa-person-chalkboard"></i>
                                                <h2 style="font-family: Pacifico;" class="number_counter" data-speed="3000" data-from="1" data-to="@totalfaculties">@totalfaculties</h2>
                                                <div class="clearfix"></div>
                                                <span style="font-family: Pacifico;">Total Faculties</span>
                                            </div>
                                        </div>
                                    </div>
                                }

                                @if (Model.admissions != null)
                                {
                                    int totaladmission = Model.admissions.Count();


                                    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                                        <div class="tile-counter bg-purple" style="font-family: Pacifico;">
                                            <div class="content">
                                               <i class="fa-regular fa-registered"></i>
                                                <h2 style="font-family: Pacifico;" class="number_counter" data-speed="3000" data-from="0" data-to="@totaladmission">@totaladmission</h2>
                                                <div class="clearfix"></div>
                                                <span style="font-family: Pacifico;">Total Students Admissions</span>
                                            </div>
                                        </div>
                                    </div>
                                } 
                            </div>
                            <div class="row">

                                @if (Model.users != null)
                                {
                                    int Totalaccount = Model.users.Count(); // Get the total number of donations

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="tile-counter bg-secondary" style="font-family: Pacifico;">
                                            <div class="content">
                                               <i class="fa-solid fa-users"></i>
                                                <h2 style="font-family: Pacifico;" class="number_counter" data-speed="3000" data-from="1" data-to="@Totalaccount">@Totalaccount</h2>
                                                <div class="clearfix"></div>
                                                <span style="font-family: Pacifico;">Total Account Registered</span>
                                            </div>
                                        </div>
                                    </div>
                                }

                                @if (Model.facilities != null)
                                {
                                    decimal TotalFacilities = Model.facilities.Count(); // Get the total donation amount

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="tile-counter bg-orange" style="font-family: Pacifico;">
                                            <div class="content">
                                               <i class="fa-solid fa-person-digging"></i>
                                                <h2 style="font-family: Pacifico;" class="number_counter" data-speed="3000" data-from="1" data-to="@TotalFacilities">@TotalFacilities</h2>
                                                <div class="clearfix"></div>
                                                <span style="font-family: Pacifico;">Total Facilities Add</span>
                                            </div>
                                        </div>
                                    </div>

                                } 

                            </div>
                            <div class="row">
                                <div class="col-12" style="border-bottom:0.5px dotted #aaa;">
                                   <h1 class="title text-center" style="font-family: Pacifico; color: #333;">
                                    College<span style="color: #26b75e;"> Contact</span> Information
                                  </h1>

                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12">

                                    <!-- start -->

                                    <div class="timeline2-centered">
                                       
                                        @foreach (var item in Model.contacts)
                                        {
                                            <article class="timeline2-entry">
                                                <div class="timeline2-entry-inner" style="font-family: 'Almendra';">
                                                    <div class="timeline2-icon bg-success">
                                                        <abbr style="border:nonw;" title="Contact ID: @item.ContId.ToString()"><i class="fa-solid fa-envelope"></i></abbr>
                                                    </div>
                                                    <div class="timeline2-label">
                                                        <h2>
                                                            <a style="font-family: 'Almendra';"><strong>@item.ContName</strong></a>
                                                            <span style="font-family: 'Almendra';">@item.ContEmail</span>
                                                            <span style="font-family: Pacifico;">@item.ContPhone</span>
                                                        </h2>
                                                        <p>@item.ContMessage</p
                                                        <p>Login Id: @item.ContUser.UserEmail</p>
                                                    </div>
                                                </div>
                                            </article>
                                        }
                                    </div>
 

                                    <!-- end -->
                                </div>
                            </div>
                            <div class="row">
                                 @if (Model.students != null)
                                {
                                    decimal student = Model.students.Count();
                                    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                                        <div class="wid-sparkgraph bg-primary">
                                            <span class='bold'>@student.ToString("0.00")%</span>
                                            <span class='pull-right'><small>Students Data</small></span>
                                            <div class="clearfix"></div>
                                            <span class="wid_dynamicbar">Loading...</span>
                                        </div>
                                    </div>
                                } 
                                 @if (Model.courses != null )
                                {
                                    int topCourse = Model.courses.Count(); // Count donations with amount greater than 10

                                    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                                        <div class="wid-sparkgraph bg-purple">
                                            <span class='bold'>@topCourse</span>
                                            <span class='pull-right'><small>Top Courses</small></span>
                                            <div class="clearfix"></div>
                                            <span class="wid_linesparkline">Loading...</span>
                                        </div>
                                    </div>
                                } 


                                @if (Model.users != null)
                                {
                                    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                                        <div class="wid-sparkgraph bg-info">
                                            <span class='bold'>@Model.users.Count()</span>
                                            <span class='pull-right'><small>Web Users Statistics</small></span>
                                            <div class="clearfix"></div>
                                            <span class="wid_compositebar">Loading...</span>
                                        </div>
                                    </div>
                                } 

                            </div>
                        </div>
                    </div>

                </section>
            </div>


        </section>
    </section>
