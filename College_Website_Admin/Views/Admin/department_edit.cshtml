            <div class="clearfix"></div>

            <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Edit Department</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle fa fa-chevron-down"></i>
                            <i class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></i>
                            <i class="box_close fa fa-times"></i>
                        </div>
                    </header>
                    <div class="content-body">
                        <div class="row">
                            <form asp-action="depart_edit2" asp-controller="Admin">
                                <div class="col-md-12 col-sm-9 col-xs-10">

                                    <div class="form-group">
                                        <label class="form-label" for="field-1">Department Name</label>
                                        <!-- <span class="desc">e.g. "Beautiful Mind"</span> -->
                                        <div class="controls">
                                            <input type="hidden" class="form-control" asp-for="Departmentid">
                                            <input type="text" class="form-control" asp-for="Departmentname" 
                                                   required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="field-1">Department Head</label>
                                        <!-- <span class="desc">e.g. "Beautiful Mind"</span> -->
                                        <div class="controls">
                                            <input type="text" class="form-control" asp-for="Departmenthead"
                                                   required>
                                        </div>
                                    </div>



                                </div>
                                <div class="col-lg-8 col-md-8 col-sm-9 col-xs-12 padding-bottom-30">
                                    <div class="text-left">
                                        <button type="submit" class="btn btn-primary" name="submit">Save</button>
                                        <button type="button" class="btn">Cancel</button>
                                    </div>
                                </div>
                            </form>
                        </div>


                    </div>
                </section>
            </div>


        </section>
